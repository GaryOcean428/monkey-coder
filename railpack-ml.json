{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-ml",
    "description": "Python ML inference service - for monkey-coder-ml service"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.13"
    },
    "cache": {
      "paths": [
        ".venv",
        "__pycache__",
        ".cache/huggingface"
      ]
    },
    "steps": {
      "install": {
        "commands": [
          "echo 'üîç Verifying Python version...'",
          "python --version",
          "python -c 'import sys; print(f\"Python {sys.version_info.major}.{sys.version_info.minor}.{sys.version_info.micro}\")'",
          "echo 'üì¶ Installing ML dependencies (this will take 25+ minutes)...'",
          "python -m venv .venv",
          ".venv/bin/pip install --upgrade pip setuptools wheel",
          ".venv/bin/pip install -r services/ml/requirements.txt",
          "echo '‚úÖ ML dependencies installed (2.5GB+ with CUDA)'",
          "echo 'üß™ Verifying PyTorch installation...'",
          ".venv/bin/python -c 'import torch; print(f\"PyTorch {torch.__version__}\")'"
        ]
      }
    },
    "env": {
      "PYTHON_ENV": "production",
      "PYTHONPATH": "/app:/app/services/ml",
      "VIRTUAL_ENV": "/app/.venv",
      "PATH": "/app/.venv/bin:/usr/local/bin:/usr/bin:/bin"
    }
  },
  "deploy": {
    "startCommand": ".venv/bin/python -m uvicorn services.ml.ml_server:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 600,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "LOG_LEVEL": "info",
      "HEALTH_CHECK_PATH": "/api/health",
      "CUDA_VISIBLE_DEVICES": "0",
      "TRANSFORMERS_CACHE": "/app/.cache/huggingface"
    }
  }
}
