{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-backend",
    "description": "FastAPI backend for Monkey Coder (uses packages/core library)"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.12"
    },
    "steps": {
      "install": {
        "commands": [
          "echo 'ðŸ“¦ Step 1: Install uv package manager'",
          "pip install --upgrade uv",
          "uv --version",
          "",
          "echo 'ðŸ“¦ Step 2: Install deployment dependencies'",
          "uv pip install -r /app/requirements-deploy.txt",
          "",
          "echo 'ðŸ“¦ Step 3: Verify packages/core structure'",
          "ls -la /app/packages/core/",
          "ls -la /app/packages/core/monkey_coder/",
          "",
          "echo 'ðŸ“¦ Step 4: Install monkey-coder-core in editable mode'",
          "cd /app/packages/core && uv pip install -e . --verbose",
          "",
          "echo 'ðŸ“¦ Step 5: Verify installation'",
          "python -c 'import sys; print(\"Python path:\", sys.path)'",
          "python -c 'import monkey_coder; print(\"âœ… monkey_coder installed at:\", monkey_coder.__file__)'",
          "python -c 'from monkey_coder.app.main import app; print(\"âœ… FastAPI app importable\")'",
          "",
          "echo 'âœ… All installation steps completed successfully'"
        ],
        "cache": {
          "paths": ["/root/.cache/uv", ".venv"]
        }
      }
    },
    "env": {
      "PYTHON_ENV": "production",
      "PYTHONPATH": "/app:/app/packages/core",
      "PYTHONUNBUFFERED": "1",
      "LOG_LEVEL": "info",
      "UV_SYSTEM_PYTHON": "1"
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn monkey_coder.app.main:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "ML_SERVICE_URL": "http://${{monkey-coder-ml.RAILWAY_PRIVATE_DOMAIN}}"
    }
  }
}
