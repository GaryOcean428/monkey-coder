{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-backend",
    "description": "FastAPI backend service with authentication and AI orchestration"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.12"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "pip install -U pip uv",
        "uv pip install -r services/backend/requirements.txt --system"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": []
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn monkey_coder.app.main:app --host 0.0.0.0 --port $PORT --workers 2 --loop uvloop",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 305,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "PYTHONPATH": "/app:/app/packages/core",
      "PYTHONUNBUFFERED": "1",
      "PYTHONDONTWRITEBYTECODE": "1",
      "LOG_LEVEL": "INFO"
    }
  }
}
