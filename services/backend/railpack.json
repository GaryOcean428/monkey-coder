{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-backend",
    "description": "FastAPI backend for Monkey Coder (uses packages/core library)"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.12"
    },
    "steps": {
      "install": {
        "commands": [
          "pip install --upgrade uv",
          "uv pip install -r /app/requirements-deploy.txt",
          "cd /app/packages/core && uv pip install -e .",
          "python -c 'import monkey_coder; print(\"✅ monkey_coder module installed:\", monkey_coder.__file__)' || (echo '❌ Failed to import monkey_coder module' && exit 1)"
        ],
        "cache": {
          "paths": ["/root/.cache/uv"]
        }
      }
    },
    "env": {
      "PYTHON_ENV": "production",
      "PYTHONPATH": "/app:/app/packages/core",
      "PYTHONUNBUFFERED": "1",
      "LOG_LEVEL": "info"
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn monkey_coder.app.main:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "ML_SERVICE_URL": "http://${{monkey-coder-ml.RAILWAY_PRIVATE_DOMAIN}}"
    }
  }
}
