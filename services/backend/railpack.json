{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13"
  },
  "caches": {
    "uv-cache": {
      "directory": "/root/.cache/uv",
      "type": "shared"
    },
    "venv": {
      "directory": ".venv",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade uv",
        "curl -fsSL https://raw.githubusercontent.com/GaryOcean428/monkey-coder/main/services/backend/requirements-deploy.txt -o requirements-deploy.txt",
        "test -f requirements-deploy.txt || exit 1",
        "python -m uv pip install -r requirements-deploy.txt",
        "python -m uv pip install --no-cache-dir git+https://github.com/GaryOcean428/monkey-coder.git#subdirectory=packages/core"
      ],
      "caches": ["uv-cache", "venv"],
      "variables": {
        "PYTHON_ENV": "production",
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "info"
      }
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn monkey_coder.app.main:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "variables": {
      "PYTHON_ENV": "production",
      "PYTHONUNBUFFERED": "1",
      "LOG_LEVEL": "info",
      "ML_SERVICE_URL": "http://${{monkey-coder-ml.RAILWAY_PRIVATE_DOMAIN}}"
    }
  }
}
