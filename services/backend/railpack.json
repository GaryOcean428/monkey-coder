{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.12"
  },
  "caches": {
    "uv-cache": {
      "directory": "/root/.cache/uv",
      "type": "shared"
    },
    "venv": {
      "directory": ".venv",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade uv",
        "if [ -f requirements-deploy.txt ]; then python -m uv pip install -r requirements-deploy.txt; else echo '⚠️ requirements-deploy.txt missing. Falling back to requirements.txt'; python -m uv pip install -r requirements.txt; fi",
        "python -m uv pip install -e ../../packages/core",
        "python -c 'import monkey_coder; print(\"✅ Installed:\", monkey_coder.__file__)'"
      ],
      "caches": ["uv-cache", "venv"],
      "variables": {
        "PYTHON_ENV": "production",
        "PYTHONPATH": "/app:/app/packages/core",
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "info"
      }
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn monkey_coder.app.main:app --host 0.0.0.0 --port $PORT",
    "variables": {
      "ML_SERVICE_URL": "http://${{monkey-coder-ml.RAILWAY_PRIVATE_DOMAIN}}"
    }
  }
}
