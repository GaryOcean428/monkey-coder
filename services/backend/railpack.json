{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13"
  },
  "steps": {
    "install": {
      "commands": [
        "curl -fsSL https://raw.githubusercontent.com/GaryOcean428/monkey-coder/main/services/backend/requirements-deploy.txt -o requirements-deploy.txt",
        "test -f requirements-deploy.txt || exit 1",
        "mkdir -p /app/.venv/lib/python3.13/site-packages",
        "pip install --target /app/.venv/lib/python3.13/site-packages -r requirements-deploy.txt",
        "pip install --target /app/.venv/lib/python3.13/site-packages --no-deps git+https://github.com/GaryOcean428/monkey-coder.git#subdirectory=packages/core"
      ],
      "variables": {
        "PYTHON_ENV": "production",
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "info"
      }
    }
  },
  "deploy": {
    "startCommand": "PYTHONPATH=/app/.venv/lib/python3.13/site-packages:$PYTHONPATH python -m uvicorn monkey_coder.app.main:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "variables": {
      "PYTHON_ENV": "production",
      "PYTHONUNBUFFERED": "1",
      "LOG_LEVEL": "info",
      "ML_SERVICE_URL": "http://${{monkey-coder-ml.RAILWAY_PRIVATE_DOMAIN}}"
    }
  }
}
