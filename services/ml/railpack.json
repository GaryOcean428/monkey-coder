{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-ml",
    "description": "ML service with transformer models and GPU support"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.12"
    },
    "cache": {
      "paths": [
        "/root/.cache/uv",
        "/app/.cache/huggingface"
      ]
    },
    "steps": {
      "install": {
        "commands": [
          "pip install --upgrade uv",
          "uv pip install -r /app/requirements.txt --system"
        ]
      }
    },
    "env": {
      "PYTHON_ENV": "production",
      "PYTHONPATH": "/app:/app/services/ml"
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn services.ml.ml_server:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 600,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "LOG_LEVEL": "info",
      "HEALTH_CHECK_PATH": "/api/health",
      "PYTHONPATH": "/app:/app/services/ml",
      "CUDA_VISIBLE_DEVICES": "0",
      "TRANSFORMERS_CACHE": "/app/.cache/huggingface"
    }
  }
}
