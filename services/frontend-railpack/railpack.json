{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "web-build": {
      "commands": [
        "corepack enable",
        "corepack prepare yarn@stable --activate",
        "cd /app/packages/web && yarn install --frozen-lockfile",
        "cd /app/packages/web && yarn build"
      ]
    }
  },
  "deploy": {
    "startCommand": "cd /app/packages/web && corepack yarn start --port ${PORT} --hostname 0.0.0.0",
    "inputs": [
      { "step": "web-build" }
    ]
  }
}
