{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder",
    "description": "Next.js frontend with static export (custom domain: coder.fastmonkey.au)"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "20"
    },
    "steps": {
      "install": {
        "commands": [
          "echo 'üì¶ Installing dependencies from repo root...'",
          "cd ../.. && corepack enable",
          "cd ../.. && corepack prepare yarn@4.9.2 --activate",
          "cd ../.. && yarn install --frozen-lockfile",
          "echo '‚úÖ Frontend dependencies installed'"
        ]
      },
      "build": {
        "commands": [
          "echo 'üî® Building Next.js frontend...'",
          "cd ../../packages/web && yarn build",
          "cd ../../packages/web && yarn export",
          "test -d ../../packages/web/out && echo '‚úÖ Static export complete' || echo '‚ö†Ô∏è Export failed'"
        ]
      }
    },
    "env": {
      "NODE_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_PUBLIC_API_URL": "https://${{monkey-coder-backend.RAILWAY_PUBLIC_DOMAIN}}"
    }
  },
  "deploy": {
    "startCommand": "npx serve -s ../../packages/web/out -p $PORT",
    "healthCheckPath": "/index.html",
    "healthCheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}