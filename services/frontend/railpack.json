{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-frontend",
    "description": "Next.js static export frontend (serves from packages/web/out)"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "20"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "corepack enable && corepack prepare yarn@4.9.2 --activate",
        "yarn install --immutable"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "yarn workspace @monkey-coder/web build",
        "yarn global add serve@14.2.4"
      ]
    }
  },
  "deploy": {
    "startCommand": "serve -s packages/web/out -l $PORT --no-clipboard",
    "healthcheckPath": "/",
    "healthcheckTimeout": 120,
    "restartPolicyType": "always",
    "variables": {
      "NODE_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "YARN_ENABLE_TELEMETRY": "0",
      "NEXT_PUBLIC_API_URL": "https://${{monkey-coder-backend.RAILWAY_PUBLIC_DOMAIN}}"
    }
  }
}
