{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-frontend",
    "description": "DEPRECATED: Railway should use root railpack.json with rootDirectory='/'"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "20"
    },
    "steps": {
      "install": {
        "commands": [
          "echo '⚠️  WARNING: This railpack.json should not be used!'",
          "echo '⚠️  Configure Railway service with rootDirectory=/ or blank'",
          "echo '⚠️  Railway will use /railpack.json from repo root'",
          "cd ../.. && corepack enable",
          "cd ../.. && corepack prepare yarn@4.9.2 --activate",
          "cd ../.. && yarn install --immutable"
        ]
      },
      "build": {
        "commands": [
          "cd ../.. && yarn workspace @monkey-coder/web build"
        ]
      }
    },
    "env": {
      "NODE_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_PUBLIC_API_URL": "https://${{monkey-coder-backend.RAILWAY_PUBLIC_DOMAIN}}"
    }
  },
  "deploy": {
    "startCommand": "cd ../.. && yarn workspace @monkey-coder/web start --hostname 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
