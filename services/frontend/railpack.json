{
  "version": "1",
  "metadata": {
    "name": "monkey-coder-frontend",
    "description": "Next.js frontend for Monkey Coder"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "22"
    },
    "steps": {
      "install": {
        "commands": [
          "corepack enable",
          "corepack prepare yarn@4.9.2 --activate",
          "cd ../.. && yarn install --immutable"
        ],
        "cache": {
          "paths": ["../../node_modules", "../../.yarn/cache"]
        }
      },
      "build": {
        "commands": [
          "cd ../.. && yarn workspace @monkey-coder/frontend build",
          "cd ../.. && yarn workspace @monkey-coder/frontend run export",
          "test -d out && echo '✅ Frontend build output verified' || (echo '❌ Build output directory missing' && exit 1)"
        ],
        "cache": {
          "paths": ["out", ".next/cache"]
        }
      }
    },
    "env": {
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "deploy": {
    "startCommand": "npx serve -s out -l $PORT",
    "healthCheckPath": "/",
    "healthCheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
