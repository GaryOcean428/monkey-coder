{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder",
    "description": "Next.js frontend with static export (custom domain: coder.fastmonkey.au)"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "20"
    },
    "steps": {
      "install": {
        "commands": [
          "echo 'ðŸ“¦ Installing dependencies from repo root...'",
          "corepack enable",
          "corepack prepare yarn@4.9.2 --activate",
          "yarn install --immutable",
          "echo 'âœ… Frontend dependencies installed'"
        ]
      },
      "build": {
        "commands": [
          "echo 'ðŸ”¨ Building Next.js frontend...'",
          "yarn workspace @monkey-coder/web build",
          "echo 'âœ… Next.js build complete'"
        ]
      }
    },
    "env": {
      "NODE_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_PUBLIC_API_URL": "https://${{monkey-coder-backend.RAILWAY_PUBLIC_DOMAIN}}"
    }
  },
  "deploy": {
    "startCommand": "yarn workspace @monkey-coder/web start --hostname 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
