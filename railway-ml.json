{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m venv .venv && .venv/bin/pip install --upgrade pip setuptools wheel && .venv/bin/pip install -r services/ml/requirements.txt"
  },
  "deploy": {
    "startCommand": ".venv/bin/python -m uvicorn services.ml.ml_server:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 600,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
