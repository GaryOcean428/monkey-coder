# Railway Environment Variables
# Copy these to Railway dashboard

# Core Configuration  
NODE_ENV=production
# PORT=8000                     # ❌ DO NOT SET - Railway auto-provides this
# HOST=0.0.0.0                  # ❌ DO NOT SET - Railway auto-provides this
# RAILWAY_ENVIRONMENT=production # ❌ DO NOT SET - Railway auto-provides this

# Frontend Configuration
SERVE_FRONTEND=true
NEXT_OUTPUT_EXPORT=true

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Security Headers
CORS_ORIGINS=https://coder.fastmonkey.au,https://${{RAILWAY_PUBLIC_DOMAIN}}
TRUSTED_HOSTS=coder.fastmonkey.au,${{RAILWAY_PUBLIC_DOMAIN}},*.railway.internal

# Performance Settings
ENABLE_PRICING_MIDDLEWARE=true
ENABLE_CONTEXT_MANAGER=true
CONTEXT_MODE=simple

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=300

# Logging
LOG_LEVEL=info
