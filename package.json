{
  "name": "monkey-coder",
  "version": "1.5.0",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "packages/*",
    "services/*",
    "docs"
  ],
  "scripts": {
    "precommit": "yarn lint && yarn typecheck",
    "start": "serve -s packages/web/out -l ${PORT:-3000} -c serve.json",
    "railway:build": "yarn install --immutable && yarn workspace @monkey-coder/web build",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:force": "tsc --build --force",
    "build:watch": "tsc --build --watch",
    "build:parallel": "run-p build:cli build:web build:sdk",
    "build:cli": "yarn workspace monkey-coder-cli run build",
    "build:web": "yarn workspace @monkey-coder/web run build",
    "build:sdk": "yarn workspace monkey-coder-sdk run build",
    "build:core": "cd packages/core && python -m build",
    "build:all": "yarn build && yarn build:core",
    "build:timed": "./scripts/time-build.sh 'yarn build'",
    "build:report": "./scripts/analyze-build-performance.sh",
    "test": "yarn workspaces foreach -A run test",
    "test:parallel": "run-p test:cli test:web test:sdk",
    "test:cli": "yarn workspace monkey-coder-cli run test",
    "test:web": "yarn workspace @monkey-coder/web run test",
    "test:sdk": "yarn workspace monkey-coder-sdk run test",
    "test:core": "cd packages/core && pytest",
    "test:all": "yarn test && yarn test:core",
    "test:watch": "yarn workspaces foreach -pi run test:watch",
    "test:coverage": "yarn workspaces foreach -A run test:coverage",
    "lint": "yarn workspaces foreach -A run lint",
    "lint:parallel": "run-p lint:cli lint:web lint:sdk",
    "lint:cli": "yarn workspace monkey-coder-cli run lint",
    "lint:web": "yarn workspace @monkey-coder/web run lint",
    "lint:sdk": "yarn workspace monkey-coder-sdk run lint",
    "lint:core": "cd packages/core && black . && isort .",
    "lint:all": "yarn lint && yarn lint:core",
    "lint:fix": "yarn workspaces foreach -A run lint:fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore .yarn",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --ignore .yarn --fix",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "yarn workspaces foreach -A run clean",
    "clean:parallel": "run-p clean:cli clean:web clean:sdk clean:core",
    "clean:cli": "yarn workspace monkey-coder-cli run clean",
    "clean:web": "yarn workspace @monkey-coder/web run clean",
    "clean:sdk": "yarn workspace monkey-coder-sdk run clean",
    "clean:core": "cd packages/core && rm -rf build dist *.egg-info",
    "clean:all": "yarn clean && yarn clean:core",
    "clean:deps": "yarn workspaces foreach -A exec rm -rf node_modules && rm -rf node_modules",
    "dev": "yarn workspaces foreach -pi run dev",
    "dev:parallel": "run-p dev:cli dev:web",
    "dev:cli": "yarn workspace monkey-coder-cli run dev",
    "dev:web": "yarn workspace @monkey-coder/web run dev",
    "analyze:deps": "./scripts/analyze-workspace-deps.sh",
    "analyze:circular": "madge --circular --extensions ts,tsx packages/",
    "constraints:check": "yarn constraints",
    "constraints:fix": "yarn constraints --fix",
    "security:audit": "yarn npm audit --all",
    "release": "yarn changeset publish",
    "release:version": "yarn changeset version",
    "publish-npm": "yarn workspace monkey-coder-cli publish --access public && yarn workspace monkey-coder-sdk publish --access public",
    "publish-pypi": "cd packages/core && python -m build && python -m twine upload dist/* && cd ../sdk/src/python && python -m build && python -m twine upload dist/*",
    "docs:dev": "yarn workspace docs run dev",
    "docs:build": "yarn workspace docs run build",
    "docs:serve": "yarn workspace docs run serve",
    "docs:validate-links": "yarn workspace docs run validate-links",
    "railway:validate": "./scripts/railway-cheatsheet-validation.sh",
    "railway:validate-build": "./scripts/railway-build-validation.sh",
    "railway:check": "./scripts/railway-cheatsheet-validation.sh && echo 'âœ… Ready for Railway deployment'"
  },
  "devDependencies": {
    "@algolia/client-search": "^5.35.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@jest/globals": "^30.0.5",
    "@sentry/vite-plugin": "^4.0.1",
    "@sentry/webpack-plugin": "^4.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "acorn": "^8.15.0",
    "algoliasearch": "^5.35.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-regexp": "^2.10.0",
    "fast-check": "^4.3.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "linkinator": "^6.1.4",
    "madge": "^8.0.0",
    "markdownlint-cli": "^0.45.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "search-insights": "^2.17.3",
    "serve": "workspace:14.2.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@mdx-js/react": "^3.1.0",
    "@prisma/client": "^6.14.0",
    "@sentry/browser": "^9.42.0",
    "@sentry/node": "^9.42.0",
    "@sentry/profiling-node": "^9.42.0",
    "@sentry/react": "^9.42.0",
    "@tanstack/react-query": "5.85.3",
    "corepack": "^0.34.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webpack": "^5.101.0"
  },
  "peerDependencies": {
    "acorn": "^8.15.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
