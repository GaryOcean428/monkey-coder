{
  "name": "monkey-coder",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "packages/*",
    "services/*",
    "docs"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -At run build",
    "test": "yarn workspaces foreach -At run test",
    "test:watch": "yarn workspaces foreach -pi run test:watch",
    "test:coverage": "yarn workspaces foreach -At run test:coverage",
    "lint": "yarn workspaces foreach -At run lint",
    "lint:fix": "yarn workspaces foreach -At run lint:fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore .yarn",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --ignore .yarn --fix",
    "typecheck": "yarn workspaces foreach -At run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "yarn workspaces foreach -At run clean",
    "clean:deps": "yarn workspaces foreach -At exec rm -rf node_modules && rm -rf node_modules",
    "dev": "yarn workspaces foreach -pi run dev",
    "release": "yarn changeset publish",
    "release:version": "yarn changeset version",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "commitlint": "commitlint",
    "postinstall": "yarn husky install",
    "docs:dev": "yarn workspace docs run dev",
    "docs:build": "yarn workspace docs run build",
    "docs:serve": "yarn workspace docs run serve",
    "docs:validate-links": "yarn workspace docs run validate-links"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "linkinator": "^6.1.4",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  }
}
