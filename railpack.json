{
  "$schema": "https://schema.railpack.com",
  "providers": ["python"],
  "python": {
    "version": "3.11"
  },
  "install": {
    "cmds": [
      "pip install -e packages/core"
    ]
  },
  "start": {
    "cmd": "python -m monkey_coder.app.main"
  },
  "healthcheck": {
    "path": "/healthz",
    "timeout": 100
  },
  "environments": {
    "production": {
      "python": {
        "optimize": true
      },
      "env": {
        "LOG_LEVEL": "INFO",
        "JSON_LOGS": "true",
        "PERFORMANCE_LOGS": "true"
      }
    },
    "development": {
      "env": {
        "LOG_LEVEL": "DEBUG",
        "JSON_LOGS": "false",
        "PERFORMANCE_LOGS": "true"
      }
    }
  }
}
