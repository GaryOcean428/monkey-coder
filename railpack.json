{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.13",
      "node": "20"
    },
    "steps": {
      "setup": {
        "description": "Setup Node.js environment and Yarn 4.9.2",
        "commands": [
          "# Bypass Corepack - install Yarn directly via npm",
          "npm install -g yarn@4.9.2",
          "# Clean up any conflicting Yarn configs",
          "rm -f .yarnrc 2>/dev/null || true",
          "rm -rf .yarn/releases 2>/dev/null || true",
          "# Verify Yarn version",
          "yarn --version",
          "# Set Yarn to use node-modules linker for Railway compatibility",
          "yarn config set nodeLinker node-modules"
        ]
      },
      "web": {
        "description": "Build Next.js frontend for static export",
        "commands": [
          "yarn install --immutable --network-timeout 300000",
          "yarn workspace @monkey-coder/web build"
        ],
        "inputs": [
          {"step": "setup"}
        ]
      },
      "python": {
        "description": "Install Python dependencies",
        "commands": [
          "pip install --no-cache-dir --upgrade pip setuptools wheel",
          "pip install --no-cache-dir -r requirements.txt",
          "cd packages/core && pip install --no-cache-dir -e ."
        ],
        "inputs": [
          {"step": "web"}
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "python run_server.py",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "inputs": [
      {"step": "python"}
    ]
  }
}
