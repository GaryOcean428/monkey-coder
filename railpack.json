{
  "version": "1",
  "metadata": {
    "name": "monkey-coder-monorepo",
    "description": "Monorepo orchestration config"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "22"
    },
    "steps": {
      "install": {
        "commands": [
          "corepack enable",
          "corepack prepare yarn@4.9.2 --activate",
          "yarn install --immutable"
        ],
        "cache": {
          "paths": ["node_modules", ".yarn/cache"]
        }
      }
    },
    "env": {
      "NODE_ENV": "production"
    }
  }
}
