{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13",
    "node": "20"
  },
  "steps": {
    "setup": {
      "commands": [
        "npm install -g yarn",
        "yarn install",
        "yarn workspace @monkey-coder/web export",
        "pip install -r requirements.txt"
      ]
    }
  },
  "deploy": {
    "startCommand": "python run_server.py",
    "inputs": [
      {
        "step": "setup"
      }
    ]
  }
}