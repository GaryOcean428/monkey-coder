{
  "$schema": "https://schema.railpack.com",
  "buildAptPackages": ["python3", "python3-pip"],
  "packages": {
    "node": "22",
    "python": "3.11"
  },
  "steps": {
    "install": {
      "commands": [
        "python3 -m pip install --upgrade pip",
        "python3 -m pip install -r requirements.txt"
      ]
    },
    "build": {
      "inputs": [
        { "step": "install" }
      ],
      "commands": [
        "cd packages/web && yarn build"
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "python:3.11-slim"
    },
    "inputs": [
      "...",
      { "step": "build", "include": ["."] }
    ],
    "startCommand": "sh -lc 'set -e; if ! command -v python3 >/dev/null 2>&1; then apt-get update; apt-get install -y python3 python3-pip; fi; python3 -m ensurepip --upgrade || true; if [ -f requirements.txt ]; then python3 -m pip install --no-cache-dir -r requirements.txt; fi; python3 run_server.py'"
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 30
  },
  "environments": {
    "production": {
      "python": {
        "optimize": true
      },
      "env": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "JSON_LOGS": "true",
        "PERFORMANCE_LOGS": "true",
        "DEBUG": "false",
        "ENABLE_METRICS": "true",
        "ENABLE_SECURITY_HEADERS": "true",
        "CORS_ORIGINS": "*",
        "TRUSTED_HOSTS": "*",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1"
      }
    },
    "development": {
      "env": {
        "ENVIRONMENT": "development",
        "LOG_LEVEL": "DEBUG",
        "JSON_LOGS": "false",
        "PERFORMANCE_LOGS": "true",
        "DEBUG": "true",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}
