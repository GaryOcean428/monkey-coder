{
  "version": "1",
  "metadata": {
    "name": "monkey-coder"
  },
  "build": {
    "steps": {
      "install": {
        "commands": [
          "corepack enable",
          "yarn install --immutable",
          "cd packages/web && yarn build",
          "pip install --upgrade pip",
          "pip install -r requirements.txt"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "python run_server.py",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300
  }
}
