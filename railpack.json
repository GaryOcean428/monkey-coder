{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-frontend",
    "description": "Monkey Coder Frontend - Web Interface and Authentication Portal"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "20"
    },
    "cache": {
      "paths": [
        "node_modules",
        "packages/web/.next",
        "packages/web/out"
      ]
    },
    "steps": {
      "install": {
        "commands": [
          "yarn install --frozen-lockfile",
          "echo 'âœ… Node dependencies installed'"
        ]
      },
      "build": {
        "commands": [
          "echo 'ðŸ”¨ Building frontend assets...'",
          "yarn workspace @monkey-coder/web build",
          "echo 'âœ… Frontend build completed'"
        ]
      }
    },
    "env": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "startCommand": "yarn workspace @monkey-coder/web start",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "PORT": "3000",
      "BACKEND_URL": "${{monkey-coder-backend.RAILWAY_PUBLIC_DOMAIN}}"
    }
  }
}
