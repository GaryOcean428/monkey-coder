{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-frontend",
    "description": "Next.js static export frontend service"
  },
  "build": {
    "provider": "node",
    "node": {
      "version": "20"
    },
    "cache": {
      "paths": [
        "node_modules",
        ".yarn/cache",
        "packages/web/.next/cache",
        "packages/web/out"
      ]
    },
    "installCommand": "corepack enable && corepack prepare yarn@4.9.2 --activate && yarn install --immutable",
    "buildCommand": "yarn workspace @monkey-coder/web build && npm install -g serve@14.2.4",
    "env": {
      "NODE_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "deploy": {
    "startCommand": "serve -s packages/web/out -l $PORT -c serve.json",
    "healthCheckPath": "/",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
