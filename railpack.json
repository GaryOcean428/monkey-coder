{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder",
    "description": "AI-powered code generation platform with unified frontend/backend"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.12.11",
      "node": "20"
    },
    "cache": {
      "paths": [
        "/app/.venv/lib/python3.12/site-packages",
        "node_modules",
        "packages/web/.next",
        "packages/web/out"
      ]
    },
    "steps": {
      "install": {
        "commands": [
          "python -m venv /app/.venv",
          "/app/.venv/bin/pip install --upgrade pip setuptools wheel",
          "/app/.venv/bin/pip install -r requirements.txt",
          "echo 'âœ… Python dependencies installed'"
        ]
      },
      "build": {
        "commands": [
          "echo 'ðŸ”¨ Building frontend assets...'",
          "cd packages/web && yarn install --frozen-lockfile",
          "cd packages/web && yarn build",
          "cd packages/web && NEXT_OUTPUT_EXPORT=true yarn export",
          "test -d packages/web/out && echo 'âœ… Static export complete' || exit 1"
        ]
      }
    },
    "env": {
      "NODE_ENV": "production",
      "PYTHON_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "PYTHONPATH": "/app:/app/packages/core",
      "VIRTUAL_ENV": "/app/.venv",
      "PATH": "/app/.venv/bin:$PATH"
    }
  },
  "deploy": {
    "startCommand": "/app/.venv/bin/python /app/run_server.py",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "LOG_LEVEL": "info",
      "HEALTH_CHECK_PATH": "/health"
    }
  }
}
