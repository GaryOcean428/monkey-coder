{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "install": {
      "commands": [
        "corepack enable",
        "corepack prepare yarn@4.9.2 --activate",
        "yarn install --immutable"
      ],
      "cache": {
        "paths": [
          "node_modules",
          ".yarn/cache"
        ]
      }
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "yarn workspace @monkey-coder/web build"
      ],
      "cache": {
        "paths": [
          "packages/web/.next/cache",
          "packages/web/out"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "node packages/serve/bin/serve.js -s packages/web/out -l $PORT -c serve.json",
    "variables": {
      "NODE_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  }
}
