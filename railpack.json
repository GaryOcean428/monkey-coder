{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder-unified",
    "description": "Unified Python backend with runtime frontend building"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.12.11",
      "node": "20"
    },
    "cache": {
      "paths": [
        "/app/.venv/lib/python3.12/site-packages",
        "packages/web/.next",
        "packages/web/out"
      ]
    },
    "steps": {
      "install": {
        "commands": [
          "python -m venv /app/.venv",
          "/app/.venv/bin/pip install --upgrade pip setuptools wheel",
          "/app/.venv/bin/pip install -r requirements.txt",
          "echo 'âœ… Python dependencies installed'"
        ]
      }
    },
    "env": {
      "PYTHON_ENV": "production",
      "PYTHONPATH": "/app:/app/packages/core",
      "VIRTUAL_ENV": "/app/.venv",
      "PATH": "/app/.venv/bin:/usr/local/bin:/usr/bin:/bin",
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "deploy": {
    "startCommand": "/app/.venv/bin/python run_server.py",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "LOG_LEVEL": "info",
      "HEALTH_CHECK_PATH": "/api/health"
    }
  }
}