{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "buildAptPackages": ["python3", "python3-pip"],
  "packages": {
    "node": "22",
    "python": "3.11"
  },
  "steps": {
    "install": {
      "commands": [
        "python3 -m pip install --upgrade pip",
        "python3 -m pip install -r requirements.txt"
      ]
    },
    "build": {
      "inputs": [
        { "step": "install" }
      ],
      "commands": [
        "cd packages/web && yarn build"
      ]
    },
    "python": {
      "inputs": [
        { "image": "python:3.11-slim" },
        { "local": true, "include": ["requirements.txt"] }
      ],
      "commands": [
        "python -m venv /opt/venv",
        "/opt/venv/bin/pip install --no-cache-dir --upgrade pip",
        "/opt/venv/bin/pip install --no-cache-dir -r requirements.txt"
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "python:3.11-slim"
    },
    "inputs": [
      "...",
      { "step": "python", "include": ["/opt/venv"] },
      { "step": "build", "include": ["."] }
    ],
    "aptPackages": ["python3", "python3-pip", "python3-venv"],
    "paths": ["/opt/venv/bin"],
    "startCommand": "/opt/venv/bin/python run_server.py"
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 30
  },
  "environments": {
    "production": {
      "python": {
        "optimize": true
      },
      "env": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "JSON_LOGS": "true",
        "PERFORMANCE_LOGS": "true",
        "DEBUG": "false",
        "ENABLE_METRICS": "true",
        "ENABLE_SECURITY_HEADERS": "true",
        "CORS_ORIGINS": "*",
        "TRUSTED_HOSTS": "*",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1"
      }
    },
    "development": {
      "env": {
        "ENVIRONMENT": "development",
        "LOG_LEVEL": "DEBUG",
        "JSON_LOGS": "false",
        "PERFORMANCE_LOGS": "true",
        "DEBUG": "true",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}
