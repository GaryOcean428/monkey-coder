{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder",
    "description": "Monkey Coder Shared Monorepo - Multi-service deployment from repo root"
  },
  "build": {
    "provider": "node",
    "packages": {
      "node": "20",
      "python": "3.12"
    },
    "cache": {
      "paths": [
        "node_modules",
        ".yarn/cache",
        "packages/web/.next",
        "packages/web/out",
        ".venv",
        "__pycache__"
      ]
    },
    "steps": {
      "install": {
        "commands": [
          "echo 'ðŸ“¦ Installing dependencies for Monkey Coder...'",
          "corepack enable",
          "corepack prepare yarn@4.9.2 --activate",
          "yarn install --immutable",
          "echo 'âœ… Dependencies installed'"
        ]
      },
      "build": {
        "commands": [
          "echo 'ðŸ”¨ Building frontend (Next.js static export)...'",
          "yarn workspace @monkey-coder/web build",
          "echo 'âœ… Frontend build complete'"
        ]
      }
    },
    "env": {
      "NODE_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "deploy": {
    "startCommand": "yarn workspace @monkey-coder/web start --hostname 0.0.0.0 --port $PORT",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
