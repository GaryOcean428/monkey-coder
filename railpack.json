{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "monkey-coder",
    "description": "AI-powered code generation platform with unified frontend/backend"
  },
  "build": {
    "provider": "python",
    "packages": {
      "python": "3.12.11"
    },
    "cache": {
      "paths": [
        "/app/.venv/lib/python3.12/site-packages",
        "node_modules",
        "packages/web/.next",
        "packages/web/out"
      ]
    },
    "steps": {
      "install": {
        "commands": [
          "apt-get update && apt-get install -y curl",
          "curl -fsSL https://deb.nodesource.com/setup_20.x | bash -",
          "apt-get install -y nodejs",
          "npm install -g yarn@latest",
          "python -m venv /app/.venv",
          "/app/.venv/bin/pip install --upgrade pip setuptools wheel",
          "/app/.venv/bin/pip install -r requirements.txt",
          "echo '‚úÖ Python dependencies installed'"
        ]
      },
      "build": {
        "commands": [
          "echo 'üî® Building frontend assets...'",
          "yarn install --frozen-lockfile || npm install -g yarn@latest && yarn install --frozen-lockfile",
          "cd packages/web && yarn install --frozen-lockfile",
          "cd packages/web && yarn build",
          "cd packages/web && NEXT_OUTPUT_EXPORT=true yarn export || yarn build",
          "test -d packages/web/out && echo '‚úÖ Static export complete' || echo '‚ö†Ô∏è Static export not found, continuing...'"
        ]
      }
    },
    "env": {
      "NODE_ENV": "production",
      "PYTHON_ENV": "production",
      "NEXT_OUTPUT_EXPORT": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "PYTHONPATH": "/app:/app/packages/core",
      "VIRTUAL_ENV": "/app/.venv",
      "PATH": "/app/.venv/bin:/usr/local/bin:/usr/bin:/bin"
    }
  },
  "deploy": {
    "startCommand": "/app/.venv/bin/python /app/run_server.py",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "env": {
      "LOG_LEVEL": "info",
      "HEALTH_CHECK_PATH": "/health"
    }
  }
}
