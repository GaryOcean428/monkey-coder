{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "node": "22",
    "python": "3.13"
  },
  "steps": {
    "web-build": {
      "inputs": [
        { "local": true, "include": ["."] }
      ],
      "commands": [
        "node -v",
        "npm -v",
        "corepack enable",
        "corepack prepare yarn@stable --activate",
        "corepack yarn -v",
        "corepack yarn install",
        "sh -lc 'cd packages/web && corepack yarn build && rm -rf ../../out && mkdir -p ../../out && cp -R out/. ../../out'"
      ]
    }
  },
  "deploy": {
    "startCommand": "python run_server.py",
    "inputs": [
      "...",
      { "step": "web-build", "include": ["out/**"] }
    ]
  }
}
