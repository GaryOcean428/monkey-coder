{
  "name": "@monkey-coder/cli",
  "version": "1.0.0",
  "description": "TypeScript CLI for Monkey Coder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "monkey": "./dist/cli.js",
    "monkey-coder": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src --ext .js || echo 'No JS files to lint'",
    "lint:fix": "eslint src --ext .js --fix || echo 'No JS files to lint'",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests"
  },
  "dependencies": {
    "@sentry/node": "^9.42.0",
    "axios": "^1.6.0",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.0",
    "eventsource-parser": "^1.1.0",
    "fs-extra": "^11.0.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.0.0",
    "typescript": "^5.4.2"
  }
}
