{
  "version": 1,
  "permissions": {
    "allowedPaths": [
      "./**/*"
    ],
    "deniedPaths": [
      "**/.env*",
      "**/.git/**",
      "**/node_modules/**",
      "**/*.pem",
      "**/*.key",
      "**/secrets/**"
    ],
    "allowedCommands": [
      "git *",
      "npm *",
      "yarn *",
      "pnpm *",
      "ls *",
      "cat *",
      "head *",
      "tail *",
      "grep *",
      "find *"
    ],
    "deniedCommands": [
      "rm -rf /*",
      "sudo *",
      "chmod 777 *"
    ],
    "requireApproval": true,
    "maxFileSize": 10485760,
    "timeout": 30000
  },
  "mcp": {
    "servers": []
  },
  "agent": {
    "defaultProvider": "anthropic",
    "defaultModel": "claude-sonnet-4-5-20250929",
    "maxIterations": 10,
    "autoApprove": false,
    "sandbox": "basic"
  }
}
