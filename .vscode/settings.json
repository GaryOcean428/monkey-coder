{
    "editor.autoIndentOnPaste": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.codeActions.triggerOnFocusChange": true,
    "editor.experimental.preferTreeSitter.css": true,
    "editor.experimental.asyncTokenizationVerification": true,
    "editor.experimental.asyncTokenizationLogging": true,
    "editor.experimental.preferTreeSitter.regex": true,
    "editor.experimental.preferTreeSitter.typescript": true,
    "editor.experimental.treeSitterTelemetry": true,
    "editor.guides.bracketPairs": true,
    "editor.inlayHints.padding": true,
    "editor.inlineCompletionsAccessibilityVerbose": false,
    "editor.linkedEditing": true,
    "editor.formatOnSave": false,
    "files.autoSave": "afterDelay",
    "editor.formatOnPaste": true,
    "editor.tabCompletion": "on",
    "auto-close-tag.insertSpaceBeforeSelfClosingTag": true,
    "auto-close-tag.SublimeText3Mode": true,
    "jdk.advanced.disable.nbjavac": false,

    "python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
    "python.terminal.activateEnvironment": false,
    "python.analysis.extraPaths": [
        "/workspace/packages/core",
        "/workspace/packages/sdk/src/python"
    ],
    "python.analysis.autoSearchPaths": true,
    "python.analysis.typeCheckingMode": "basic",
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.suggest.autoImports": true,
    "eslint.workingDirectories": [
        "packages/cli",
        "packages/web",
        "packages/sdk",
        "docs"
    ],
    "search.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/dist": true,
        "**/build": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/coverage": true,
        "**/.venv": true,
        "**/venv": true,
        "**/.next": true,
        "**/out": true
    },
    "files.exclude": {
        "**/.next": true,
        "**/out": true
    },
    "files.watcherExclude": {
        "**/.next/**": true,
        "**/out/**": true
    },
    "htmlhint.exclude": [
        "**/node_modules/**",
        "**/.next/**",
        "**/out/**",
        "**/dist/**",
        "**/build/**"
    ],
    "edge-devtools.webhintIgnoreList": [
        "**/.next/**",
        "**/out/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**"
    ],
    "edge-devtools.sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*",
        "meteor://ðŸ’»app/*": "${webRoot}/*"
    },
    "files.associations": {
        "*.md": "markdown"
    },
    "markdown.extension.toc.levels": "2..6",
    "workbench.colorCustomizations": {
        "activityBar.background": "#2D3748",
        "activityBar.foreground": "#ffffff"
    },
    "chat.mcp.autostart": "newAndOutdated",
    "chat.edits2.enabled": true,
    "chat.editor.wordWrap": "on",
    "chat.agent.maxRequests": 200,
    "java.format.onType.enabled": false
}
